{
	"openapi": "3.0.1",
	"info": {
	  "title": "Authentication",
	  "description": "Testing different Authentication .",
	  "version": "1.0"
	},
	"servers": [
	  { "url": "http://www.testserver.com" }
	],
	"paths": {
	  "/Something": {
      "get": {
        "summary": "Test calls",
        "description": "Running a call with authentication.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": { "type": "string"}
              }
            }
          }
        },
        "security": [
          {
            "OAuth2Server": [
              "admin.read"
            ]
          }
        ]
      }
	  }
	},
	"components": {
	  "securitySchemes": {
      "OAuth2Server": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "https://www.oauthserver.com/connect/token",
            "scopes": {
              "admin.read": "Admin Read",
              "admin.write": "Admin Write"
            }
          },
          "authorizationCode": {
            "authorizationUrl": "https://www.oauthserver.com/connect/authorize",
            "tokenUrl": "https://www.oauthserver.com/connect/token",
            "scopes": {
              "user.read": "User Read",
              "user.write": "User Write"
            }
          }
        }
      },
      "OAuth2Client": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://www.oauthserver.com/connect/authorize",
            "tokenUrl": "https://www.oauthserver.com/connect/token",
            "redirectUrl": "https://www.mysite.com/custompath/oauth-receiver.html",
            "scopes": {
              "user.read": "User Read",
              "user.write": "User Write"
            }
          }
        }
      },
      "ApiKeyClient": {
        "type": "apiKey",
        "in": "query",
        "name": "X-API-KEY",
        "description": "Token based authentication"
      },
      "BearerClient": {
        "type": "http",
        "scheme": "bearer"
      },
      "BasicClient": {
        "type": "http",
        "scheme": "basic"
      }
	  }
	}
}